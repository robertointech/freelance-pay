# ===========================================
# FreelancePay Environment Variables
# ===========================================

# WalletConnect Project ID (get from cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Circle Developer API (get from developers.circle.com)
CIRCLE_API_KEY=
CIRCLE_ENTITY_SECRET=

# Yellow Network WebSocket URL
# Sandbox (testing): wss://clearnet-sandbox.yellow.com/ws
# Production: wss://clearnet.yellow.com/ws
NEXT_PUBLIC_YELLOW_WS_URL=wss://clearnet-sandbox.yellow.com/ws

# Supported Chain RPCs (optional - defaults provided)
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://rpc.sepolia.org
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-rpc.com
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Arc Testnet
NEXT_PUBLIC_ARC_TESTNET_RPC_URL=https://rpc.testnet.arc.network/

# ENS (optional)
NEXT_PUBLIC_ENS_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/ensdomains/ens
